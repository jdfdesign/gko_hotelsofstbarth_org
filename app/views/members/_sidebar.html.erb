<% content_for :sidebar do %>
    <% if resource.map.present? %>
	 <%= image_tag(resource.map.thumb('x120').url) %>
	<% end %>
	<% if resource.pictos.any? %>
	 <% resource.pictos.each do |picto| %>
		<%= image_tag(picto.image.thumb('x80').url) %>
	 <% end %>
	<% end %>
	
    <%= render_parent_categories %>
    <%= render_parent_stickers %>
<% end %>