<%# cache [action_name, I18n.locale, resource.site, resource] do %> 
<div class="row-fluid">
	<div class="span12">
	   <%= render_page_title(resource.title) %>
	</div>     
</div>  
<div class="row-fluid"> 
	<div class="span6">
		<%= render_slideshow_for(resource) %>
		<%= render_html_text(resource.body) %>
	</div>
	<div class="span6">
		<%= simple_form_for(:job_request, :url => job_requests_path, :method => :post,
		                    :html => {:multipart => true, :class => ["job-request"]}) do |f| %>
		    <%= hidden_field_tag(:return_to, request.url) %>
		    <%= f.hidden_field :site_id, :value => site.id %>
		    <%= f.error_notification %>
			<%= display_base_errors f.object %>
		    <%= f.input 	:name, :hint => false,
							:input_html => { :class => 'span12' } %>
		    <%= f.input 	:email, :hint => false,
							:input_html => { :class => 'span12' } %>
		    <%= f.input 	:phone, :hint => false, :required => false,
							:input_html => { :class => 'span12' } %>
			<%= f.input 	:address, :hint => false, :required => false,
							:input_html => { :class => 'span12' } %>
		    <%= f.input 	:body, :as => :text, :hint => false, 
							:input_html => { :rows => 6, :class => 'span12' } %>
		    <%= f.input 	:curriculum, :as => :file  %>
			<%= render 'anti_spam_field', :f => f %>
		    <div class='controls'>
		      <%= f.button :submit, t("send_inquiry"), :class => 'btn btn-block btn-primary', :disable_with => "Submitting..." do %>	
				<i class="icon-arrow-right"></i>
				<% end %>
		    </div>
	
		<% end %>
	</div>
</div> 
<%# end %>   